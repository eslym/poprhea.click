@keyframes horizontal-shaking {
    0% {
        transform: translateX(0);
    }
    25% {
        transform: translateX(5px);
    }
    50% {
        transform: translateX(-5px);
    }
    75% {
        transform: translateX(5px);
    }
    100% {
        transform: translateX(0);
    }
}

html,
body {
    position: relative;
    width: 100vw;
    height: 100vh;
}

body {
    background: #11012e;
    color: white;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Noto Sans CJK TC', sans-serif;
}

div.sky {
    text-align: center;

    background-image: url('./lib/images/sky.png');
    background-repeat: repeat;

    width: 100vw;
    height: 100vh;

    overflow: hidden;

    pointer-events: none;
}

div.sky.turbo {
    background-image: url('./lib/images/turbo_sky.png');
}

div.popCount {
    z-index: 100;
    position: fixed;
    font-size: 4em;
    text-align: center;
    top: 1em;
    left: 0;
    right: 0;
    text-shadow: 0 0 0.5em #a100e9;
    scale: 1;
    transition: scale 0.2s;
}

div.popCount.large {
    scale: 1.1;
}

div.popCount div.unit {
    font-size: 0.3em;
}

div.sky.turbo div.popCount {
    animation: horizontal-shaking 0.05s linear infinite;
}

div.subtitle {
