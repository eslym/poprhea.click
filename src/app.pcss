div.locator {
    --shift: 200px;
    position: fixed;
    width: 0;
    height: 0;
    max-width: 0;
    max-height: 0;
    top: calc(20% + var(--shift));
    left: 50%;
    overflow: visible;
}

div.rhea {
    width: 800px;
    height: 1416px;
    margin-left: calc(var(--scale) * -400px);
    margin-top: calc(var(--scale) * -200px);
    transform: scale(var(--scale));
    transform-origin: top left;
}

img.rhea {
    margin: 0 auto;
    width: 100%;
    height: auto;
}

img.rhea.hide {
    display: none;
}

@media (orientation: landscape) and (max-height: 800px) {
    div.locator {
        --shift: 150px;
    }
    div.popCount {
        font-size: 3em;
    }
    div.subtitle {
        font-size: 2.8em;
    }
}

@media (orientation: landscape) and (max-height: 600px) {
    div.locator {
        --shift: 100px;
    }
    div.popCount {
        font-size: 2em;
    }
    div.subtitle {
        font-size: 1.8em;
    }
}

@media (orientation: landscape) and (max-height: 400px) {
    div.locator {
        --shift: 60px;
    }
    div.popCount {
        font-size: 2.5em;
    }
    div.subtitle {
        font-size: 1.5em;
    }
}

@media (orientation: portrait) {
    div.locator {
        --shift: 100px;
    }
}

@supports (height: 100dvh) {
    html,
    body {
        height: 100dvh;
    }
}
